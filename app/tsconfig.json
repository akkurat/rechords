{
	"compilerOptions": {
		"importHelpers": true,
		"target": "es6",
		"lib": [
			"DOM",
			"ESNext",
			"DOM.Iterable"
		],
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		// "jsxImportSource": "react",
		"downlevelIteration": true,
		"paths": {
			"@/*": ["./imports/*"]
		},
							    
		"plugins": [
			{
				"name": "typescript-plugin-add-type"
			}
		],
		"paths": {"@/*":["./imports/*"]},

		"typeRoots": [
			"./node_modules/@types",
			"./node_modules",
		],
		"types": [
			"@types/meteor",
			"core-js"
		],

		"jsx": "react"
	}
}
