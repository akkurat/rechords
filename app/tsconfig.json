{
	"compilerOptions": {
		"importHelpers": true,
		"target": "es5",
		"downlevelIteration": true,
		"lib": [
			"es6",
			"dom.iterable",
			"es2016.array.include",
			"dom",
			"es2015.collection",
			"es2015.iterable"
		],
		"preserveConstEnums": true,
		"sourceMap": true,
							    
		"plugins": [
			{
				"name": "typescript-plugin-add-type"
			}
		],

		"typeRoots": [
			"./node_modules/@types",
			"./node_modules"
		],
		"types": [
			"meteor-typings",
			"core-js",
			"requirejs"
		],

		"jsx": "react"
	}
}
